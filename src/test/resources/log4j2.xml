<?xml version="1.0" encoding="UTF-8"?>
<!-- Extra logging related to initialization of Log4j. 
 Set to debug or trace if log4j initialization is failing. -->
 
 
<Configuration debug="true" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:noNamespaceSchemaLocation="log4j21.xsd" status="WARN">
 <Properties>
    <Property name="filename">.\\src\\test\\resources\\log</Property>
  </Properties>
 	<ThresholdFilter level="all"/>
    <Appenders>
   
        
 <RollingRandomAccessFile name="File" fileName="${filename}/logdemo.log"
                 filePattern="${filename}/reportlog-%d{HH-mm-ss-SSS}.log">
                 
         <Policies>        
      <TimeBasedTriggeringPolicy interval="10000" modulate="false"/>
        <SizeBasedTriggeringPolicy size="5 KB"/>   
      </Policies>
      
      <PatternLayout 
                pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n" />
        <DefaultRolloverStrategy max="24"/>
      
    </RollingRandomAccessFile>  
    
    	<!-- Console appender configuration -->
        
     <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        
     
        
    </Appenders> 
    <Loggers>
    
    	<!-- Root logger referring to console appender -->
        <Root level="trace" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File" />
        </Root>
    </Loggers>
</Configuration>