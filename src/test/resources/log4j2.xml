<?xml version="1.0" encoding="UTF-8"?>
<!-- Extra logging related to initialization of Log4j. 
 Set to debug or trace if log4j initialization is failing. -->
 
<Configuration debug="true" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:noNamespaceSchemaLocation="log4j21.xsd" status="WARN">
 <Properties>


    <Property name="logDir">Reports//logs//</Property>

  </Properties> 
 	
    <Appenders>
   
        
 <RollingRandomAccessFile name="File" 
                 filePattern="${sys:logDir}/Reportlog-%d{HH-mm-ss}.html">
                 <HTMLLayout charset="UTF-8" title="Marketo Logs " locationInfo="true" />
         <Policies>        
      <TimeBasedTriggeringPolicy interval="10000" modulate="true"/>
        <SizeBasedTriggeringPolicy size="12KB"/>   
      </Policies>
      
      <PatternLayout 
                pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n" />
       
      
    </RollingRandomAccessFile>  
    
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{ddMMMyyyy HH:mm:ss,SSS}^[%X{l4j_mdc_key}]^[%c{1}]^ %-5p %m%n" />
   </layout>
    	<!-- Console appender configuration -->
        
     <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        
     
        
    </Appenders>
 
    <Loggers>
    
    	<!-- Root logger referring to console appender -->
        <Root level="trace" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File" />
        </Root>
    </Loggers>
</Configuration>

